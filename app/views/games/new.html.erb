<h1>Create your word</h1>
<div class="d-flex flex-row bg-white">
  <%@letters.each do |letter|%>
  <div class="p-3 bg-success m-1">
    <h2><%= letter.upcase%></h2>
  </div>
  <% end %>
</div>
<!-- <p>What is the longest word you could create</p> -->
<form action="/score"  method="post" class="form-group">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <label for="btn">What is the longest word you could create</label>
  <input type="text" class="form-control" name="word">
  <%= hidden_field_tag :letters, @letters %>
  <input type="submit" value="check!" class="btn btn-success">
</form>
